<div metal:use-macro="load: _layout.pt">
<div metal:fill-slot="content">

<div class="content">

    <div class="hero">
        <h1>
            Kultur Programm Bremen
        </h1>
        <p class="lead">
            Eine eigensinnige kulturelle Auswahl in Bremen
        </p>
    </div>

    <div class="program-settings"  id="settings">
        <div class="container-fluid">
            <div class="row justify-content-sm-center">
                <div class="col-sm-auto align-self-center program-setting">
                    <ul class="nav nav-pills">
                      <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle"
                           data-toggle="dropdown" href="#"
                           role="button"
                           aria-haspopup="true"
                           aria-expanded="false">${time_span}</a>
                        <div class="dropdown-menu" style="">
                          <a tal:condition="time_span != 'heute'" class="dropdown-item" href="/${category}/wann=heute+synchronisierter=${dubbed}#settings">Heute</a>
                          <a tal:condition="time_span != 'morgen'" class="dropdown-item" href="/${category}/wann=morgen+synchronisierter=${dubbed}#settings">Morgen</a>
                          <a tal:condition="time_span != 'uebermorgen'" class="dropdown-item" href="/${category}/wann=uebermorgen+synchronisierter=${dubbed}#settings">Übermorgen</a>
                          <a tal:condition="time_span != 'woche'" class="dropdown-item" href="/${category}/wann=woche+synchronisierter=${dubbed}#settings">Diese Woche</a>
                        </div>
                      </li>
                    </ul>
                </div>

                <div class="col-sm-auto align-self-center program-setting category">
                    <a tal:condition="category == 'alle'" type="button" class="btn btn-primary film" href="/kino/wann=${time_span}+synchronisierter=${dubbed}#settings">Kino</a>
                    <a tal:condition="category == 'kino'" type="button" class="btn btn-primary film" href="/alle/wann=${time_span}+synchronisierter=${dubbed}#settings">Kino</a>
                    <a tal:condition="category not in ['kino', 'alle']" type="button" class="btn btn-outline-primary film" href="/kino/wann=${time_span}+synchronisierter=${dubbed}#settings">Kino</a>
                    <a tal:condition="category == 'alle'" type="button" class="btn btn-primary stage" href="/buehne/wann=${time_span}+synchronisierter=${dubbed}#settings">Bühne</a>
                    <a tal:condition="category == 'buehne'" type="button" class="btn btn-primary stage" href="/alle/wann=${time_span}+synchronisierter=${dubbed}#settings">Bühne</a>
                    <a tal:condition="category not in ['buehne', 'alle']" type="button" class="btn btn-outline-primary stage" href="/buehne/wann=${time_span}+synchronisierter=${dubbed}#settings">Bühne</a>
                    <a tal:condition="category == 'alle'" type="button" class="btn btn-primary music" href="/musik/wann=${time_span}+synchronisierter=${dubbed}#settings">Musik</a>
                    <a tal:condition="category == 'musik'" type="button" class="btn btn-primary music" href="/alle/wann=${time_span}+synchronisierter=${dubbed}#settings">Musik</a>
                    <a tal:condition="category not in ['musik', 'alle']" type="button" class="btn btn-outline-primary music" href="/musik/wann=${time_span}+synchronisierter=${dubbed}#settings">Musik</a>
                </div>

                <div class="col-sm-auto align-self-center program-setting">
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="customSwitch1">
                        <label class="custom-control-label" for="customSwitch1">kein synchronisierter Filme</label>
                    </div>
                </div>
                <!-- Default checked -->
            </div>
        </div>
    </div>
    <div class="container show-list">
        <div class="row justify-content-center">

            <div class="col-sm-auto">
                <div class="show" tal:repeat="s shows">
                    <div tal:condition="type(s) == str"><h2>${s}</h2></div>

                    <table tal:condition="type(s) != str" class="show-info">
                        <tr>
                            <td>
                                <span class="time">${s.time}</span>
                            </td>
                            <td>
                                <span tal:condition="s.category == 'cinema'" class="location film">
                                    <mark>${s.location}</mark>
                                </span>
                                <span tal:condition="s.category == 'stage'" class="location stage">
                                    <mark>${s.location}</mark></span>
                                <span tal:condition="s.category == 'music'" class="location music">
                                    <mark>${s.location}</mark></span>
                                <span tal:condition="s.category == 'cinema'" class="title">
                                    <a class="film" href="${s.url_info}">${s.title}</a>
                                </span>
                                <span tal:condition="s.category == 'stage'" class="title">
                                    <a class="stage" href="${s.url_info}">${s.title}</a>
                                </span>
                                <span tal:condition="s.category == 'music'" class="title">
                                    <a class="music" href="${s.url_info}">${s.title}</a>
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <div class="d-none d-md-block desc">${s.description}</div>
                            </td>
                        </tr>
                    </table>

                </div>
            </div>

        </div>
    </div>
<!--  {'day': 'Monday 02-03', 'location': '', 'time': '', 'title': '', 'url_info': '', 'description': ''},-->

</div>
</div>

<div metal:fill-slot="additional-css" tal:omit-tag>
    <!-- additional css from the page -->
</div>
</div>
